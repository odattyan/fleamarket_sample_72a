= render "items/header"
%main.content
  %section.content-credit
    %h2.content-credit__title
      登録クレジットカード情報
    .content-credit__list
      %h3.content-credit__list__title
        クレジットカード一覧
      .credit-info
        .credit-info__numbers
        %p.credit-info__numbers__card
          = "**** **** ****" + @customer_card.last4
        %p.expiration_date
          .expiration_date__title
            有効期限
          .expiration_date__info
            = @exp_month + "/" + @exp_year
    .destroy__function
      .destroy__function__link
        = link_to 

      
